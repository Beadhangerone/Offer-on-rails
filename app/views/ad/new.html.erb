
<form action ='/ad' method="POST">

	<div class="input-group">

		<div class="input-group-addon">Категория</div>

		<select name="category" class="form-control ctgr_select">

			<%if not $category%>
				<option disabled selected> Выберите категорию </option>
			<%end%>

			<% categs.each do |categ|%>
				<option <%if categ.category == $category%> selected <%end%> value=<%= categ.category %>><%= categ.category %></option>
			<% end%>
		</select>
	</div>

	<div class="radio">
		<label>
			<input name="bill_type" value="Продам" type="radio"  id="optionsRadios1"
			<%if $bill_type == "Продам"%> checked <%end%>>Продам
		</label>
	</div>

	<div class="radio">
		<label>
		    <input name="bill_type" value="Куплю" type="radio"  id="optionsRadios2"
		    <%if $bill_type == "Куплю"%> checked <%end%>>Куплю
		</label>
	</div>

	<input name="ad_header" type="text" class="form-control" placeholder="Заголовок объявления"
	value=<%= $ad_header %>><br>
	<textarea name="ad_text" class="form-control" wrap="hard" cols="100" rows="20"
	 placeholder="Текст объявления"><%= $ad_text %></textarea><br>
	<button type="submit" class="btn btn-default" style="float:right;">Submit</button>
</form>
